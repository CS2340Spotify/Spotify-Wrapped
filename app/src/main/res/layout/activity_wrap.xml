<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/teal_background">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="368dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/black_back_button" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:stretchColumns="*"
        tools:ignore="ExtraText">
        <!-- Header Row -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Top Artists"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/circular_std_medium_500" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_std_medium_500"
                android:text="Top Songs"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Rows for artists and songs -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Artist 1"
                android:fontFamily="@font/circular_std_medium_500"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="@color/spotify_grey" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Song 1"
                android:fontFamily="@font/circular_std_medium_500"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow>
