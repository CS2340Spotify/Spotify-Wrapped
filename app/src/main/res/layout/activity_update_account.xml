<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/spotify_green"
    tools:context=".UpdateAccountFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="20dp">

            {

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@color/spotify_grey">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingTop="24dp">

                    <TextView
                        android:id="@+id/update_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/green_underline"
                        android:fontFamily="@font/circular_std_medium_500"
                        android:paddingBottom="6dp"
                        android:text="Update Account Information"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/login_fields"
                    android:fontFamily="@font/circular_std_medium_500"
                    android:hint="Enter New Name"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_fields"
                    android:fontFamily="@font/circular_std_medium_500"
                    android:hint="Enter New Username"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_fields"
                    android:fontFamily="@font/circular_std_medium_500"
                    android:hint="Enter New Password"
                    android:inputType="textPassword"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/save_changes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save Changes"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/circular_std_medium_500"
                    android:backgroundTint="@color/spotify_green" />

                <Button
                    android:id="@+id/back_to_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Back"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"


                    android:fontFamily="@font/circular_std_medium_500"
                    android:backgroundTint="@color/spotify_green" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>

