<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/past_wrap_item"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/todo_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spotify_green"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/past_wrap_text_wrapper">

            <TextView
                android:id="@+id/past_wrap_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Wrap Date"
                android:textColor="@color/white"
                android:fontFamily="@font/circular_std_medium_500"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>