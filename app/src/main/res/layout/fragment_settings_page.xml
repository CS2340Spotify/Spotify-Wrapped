<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_background"
    tools:context=".UpdateAccountFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@color/spotify_grey">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/update_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/green_underline"
                    android:fontFamily="@font/circular_std_medium_500"
                    android:paddingBottom="6dp"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <Button
                android:id="@+id/notification_preferences"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/white"
                android:text="Notification Preferences"
                android:fontFamily="@font/circular_std_medium_500"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dark_light_mode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Dark-Light Mode"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circular_std_medium_500"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/update_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circular_std_medium_500"
                android:text="Update Profile"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circular_std_medium_500"
                android:text="Delete Account"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back_to_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/circular_std_medium_500"
                android:backgroundTint="@color/spotify_green" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

